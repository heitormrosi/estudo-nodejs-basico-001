{% extends "layout.njk" %}

{% block pagina %}
        {% if result %}
            <h1>Tabuada do
                {{ result }}</h1>
            {% for i in[
                1,
                2,
                3,
                4,
                5,
                6,
                7,
                8,
                9
            ] %}
                <p>{{ result }}
                    X
                    {{ i }}
                    =
                    {{ result * i }}</p>
            {% endfor %}
        {% else %}
            <h1>Números ímpares são inválidos.</h1>
        {% endif %}
{% endblock %}